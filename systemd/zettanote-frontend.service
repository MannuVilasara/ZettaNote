[Unit]
Description=ZettaNote Frontend Service
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/zettanote/current/frontend
ExecStart=/usr/bin/serve -s . -l 3000
Restart=always
RestartSec=10
StandardOutput=append:/var/log/zettanote/frontend.log
StandardError=append:/var/log/zettanote/frontend-error.log

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true

[Install]
WantedBy=multi-user.target
