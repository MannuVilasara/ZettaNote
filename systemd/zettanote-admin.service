[Unit]
Description=ZettaNote Admin Portal Service
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/zettanote/current/admin-portal
ExecStart=/usr/bin/serve -s . -l 3001
Restart=always
RestartSec=10
StandardOutput=append:/var/log/zettanote/admin.log
StandardError=append:/var/log/zettanote/admin-error.log

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true

[Install]
WantedBy=multi-user.target
